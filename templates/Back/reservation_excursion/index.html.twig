{% extends 'baseBack.html.twig' %}

{% block title %}Gestion des r√©servations d'excursion{% endblock %}

{% block body %}
<style>
.dataTables_wrapper .dataTables_filter {
    float: right;
    text-align: right;
}
.dataTables_wrapper .dataTables_paginate {
    float: right;
    text-align: right;
}
</style>

<div class="container mt-4">
    <h1 class="mb-3">üèïÔ∏è R√©servations des excursions</h1>

    <!-- üîî Messages flash -->
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">{{ message }}</div>
        {% endfor %}
    {% endfor %}

    <!-- ‚ûï Bouton Ajouter -->
    <a href="{{ path('app_reservation_excursion_new') }}" class="btn btn-primary mb-3">
        ‚ûï Nouvelle r√©servation
    </a>

    <!-- üìä Tableau des r√©servations -->
    <table class="table table-bordered table-hover align-middle datatable">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Image</th>
                <th>Excursion</th>
                <th>Client</th>
                <th>Date Excursion</th>
                <th>PAX</th>
                <th>Lieu</th>
                <th>Prix Total</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            {% for reservation in reservation_excursions %}
                <tr>
                    <td>{{ reservation.id }}</td>

                    <!-- Image Excursion -->
                    <td>
                        {% if reservation.excursion and reservation.excursion.imagePrincipale %}
                            <img src="{{ asset('uploads/images/' ~ reservation.excursion.imagePrincipale) }}"
                                alt="Excursion"
                                style="width: 70px; height: 50px; object-fit: cover; border-radius: 6px;">
                        {% else %}
                            <span class="text-muted">‚Äî</span>
                        {% endif %}
                    </td>

                    <!-- Excursion -->
                    <td>
                        {% if reservation.excursion %}
                            <strong>{{ reservation.excursion.titre }}</strong>
                        {% else %}
                            <span class="text-muted">Non sp√©cifi√©</span>
                        {% endif %}
                    </td>

                    <td>
                        {{ reservation.nom }} {{ reservation.prenom }}<br>
                        <!-- <small class="text-muted">{{ reservation.dateCreation ? reservation.dateCreation|date('d/m/Y') : '' }}</small> -->
                    </td>

                    <td>{{ reservation.dateHeure ? reservation.dateHeure|date('Y-m-d H:i') : '‚Äî' }}</td>

                    <td>
                        <span class="badge bg-light text-dark border">{{ reservation.adult }} Adultes</span>
                        <span class="badge bg-light text-dark border">{{ reservation.child }} Enfants</span>
                    </td>

                    <td>{{ reservation.localisationPoint }}</td>

                    <!-- üí∞ Prix total -->
                    <td>
                        {% if reservation.prixTotal %}
                            <strong>{{ reservation.prixTotal }} TND</strong>
                        {% else %}
                            ‚Äî
                        {% endif %}
                    </td>

                    <td>
                        {% if reservation.statut == 'en attente' %}
                            <span class="badge bg-warning text-dark">‚è≥ En attente</span>
                        {% elseif reservation.statut == 'confirmee' %}
                            <span class="badge bg-success">‚úÖ Confirm√©e</span>
                        {% else %}
                            <span class="badge bg-danger">‚ùå Annul√©e</span>
                        {% endif %}
                    </td>

                    <td>
                        <div class="dropdown">
                            <button class="btn btn-sm btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Actions
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" href="{{ path('app_reservation_excursion_show', {'id': reservation.id}) }}">üëÅÔ∏è Voir</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="{{ path('app_reservation_excursion_edit', {'id': reservation.id}) }}">‚úèÔ∏è Modifier</a>
                                </li>
                                <li>
                                    <a class="dropdown-item text-success" href="{{ path('app_reservation_excursion_update_statut', {'id': reservation.id, 'statut': 'confirmee'}) }}">
                                        ‚úÖ Confirmer
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item text-warning" href="{{ path('app_reservation_excursion_update_statut', {'id': reservation.id, 'statut': 'annulee'}) }}">
                                        üö´ Annuler
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                     <a class="dropdown-item text-danger" href="#" onclick="if(confirm('Supprimer ?')) document.getElementById('delete-form-{{ reservation.id }}').submit();">üóëÔ∏è Supprimer</a>
                                </li>
                            </ul>
                        </div>
                        <form id="delete-form-{{ reservation.id }}" method="post" action="{{ path('app_reservation_excursion_delete', {'id': reservation.id}) }}" style="display: none;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9" class="text-center text-muted">Aucune r√©servation enregistr√©e.</td>
                </tr>
            {% endfor %}
        </tbody>

    </table>
</div>
{% endblock %}
