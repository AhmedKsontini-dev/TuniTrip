{% extends 'baseFront.html.twig' %}

{% block title %}R√©servation de voiture{% endblock %}

{% block body %}

<style>
:root {
    --primary: #1c2228;
    --secondary: #d8b65d;
    --offwhite: #f5f4f1;
}
.home {
    position: relative;
    height: 420px;
    background: linear-gradient(135deg, rgba(28,34,40,.82), rgba(28,34,40,.72)), url("{{ asset('assetsFront/inner_HEADER.jpg') }}") center/cover no-repeat;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
}
.home::before {
    content: "";
    position: absolute;
    inset: 0;
    backdrop-filter: blur(1px);
}
.home_content {
    position: relative;
    z-index: 2;
    margin-top: 60px; 

}
.home_title {
    font-size: 46px;
    color: var(--secondary);
    font-weight: 700;
    letter-spacing: .06em;
    text-transform: uppercase;
}
.home_content p {
    font-size: 1.05rem;
    margin: 0;
    color: rgba(255,255,255,.8);
}
.reservation-wrapper {
    max-width: 1050px;
    margin: -90px auto 40px;
    padding: 35px;
    border-radius: 28px;
    background: #fff;
    box-shadow: 0 30px 80px rgba(7,10,14,.25);
}
.form-section-title {
    font-size: 1.9rem;
    font-weight: 600;
    color: var(--primary);
    margin-bottom: 25px;
}
.form-step {
    display: none;
    animation: fadeSlide .6s ease;
}
.form-step.active {
    display: block;
}
@keyframes fadeSlide {
    from { opacity: 0; transform: translateY(18px); }
    to { opacity: 1; transform: translateY(0); }
}
.step-indicator {
    display: flex;
    position: relative;
    margin-bottom: 35px;
    gap: 18px;
}
.step-indicator::after {
    content: "";
    position: absolute;
    inset: auto 35px 28px 35px;
    height: 4px;
    background: #ece7dd;
    z-index: 1;
}
.step {
    flex: 1;
    padding: 20px 15px 30px;
    text-align: center;
    border-radius: 16px;
    background: var(--offwhite);
    font-weight: 600;
    color: rgba(28,34,40,.7);
    transition: all .3s ease;
    position: relative;
    z-index: 2;
    border: 1px solid transparent;
}
.step small {
    display: block;
    font-size: .85rem;
    margin-top: 4px;
}
.step.active {
    background: linear-gradient(140deg, var(--primary), var(--secondary));
    color: #fff;
    border-color: rgba(255,255,255,.4);
    box-shadow: 0 15px 30px rgba(28,34,40,.35);
}
.floating-label label {
    font-weight: 500;
    color: var(--primary);
}
.form-control {
    border-radius: 14px;
    border: 1px solid rgba(28,34,40,.2);
    padding: 12px 16px;
    transition: border-color .2s ease, box-shadow .2s ease;
}
.form-control:focus {
    border-color: var(--secondary);
    box-shadow: 0 0 0 0.15rem rgba(216,182,93,.35);
}
.invalid-feedback.d-block {
    font-size: .85rem;
    color: #dc3545;
}
.btn-step {
    margin-top: 25px;
    min-width: 180px;
    border-radius: 999px;
    padding: 12px 24px;
    font-weight: 600;
    border: none;
    box-shadow: 0 15px 35px rgba(28,34,40,.2);
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    color: #fff;
}
.btn-step.btn-primary,
.btn-step.btn-primary:hover,
.btn-step.btn-primary:focus {
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    border-color: var(--primary);
}
.btn-step.btn-secondary {
    background: rgba(28,34,40,.12);
    color: var(--primary);
    box-shadow: none;
    border: 1px solid rgba(28,34,40,.2);
}
.btn-step.btn-success {
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    color: #fff;
    box-shadow: 0 15px 35px rgba(216,182,93,.35);
}
.car-card {
    border-radius: 24px;
    background: rgba(255,255,255,.98);
    border: 1px solid rgba(28,34,40,.08);
    transition: transform .3s ease, box-shadow .3s ease;
    position: relative;
    overflow: hidden;
}
.car-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 18px 40px rgba(15,23,42,.2);
}
.car-card::after {
    content: "";
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at top right, rgba(216,182,93,.2), transparent 55%);
    pointer-events: none;
}
.car-card-inner {
    position: relative;
    z-index: 1;
}
.car-img {
    object-fit: cover;
    border-radius: 22px;
   
    width: 200px;
    height: 130px;
}
.car-card-visual {
    position: relative;
}
.car-tag {
    position: absolute;
    bottom: 10px;
    left: 12px;
    padding: 6px 14px;
    border-radius: 999px;
    background: rgba(12,14,16,.8);
    color: #fff;
    font-size: .8rem;
    text-transform: uppercase;
    letter-spacing: .08em;
}
.car-card-header {
    border-bottom: 1px solid rgba(28,34,40,.08);
    padding-bottom: 12px;
    margin-bottom: 18px;
}
.car-card-header h4 {
    color: var(--primary);
    margin: 0;
}
.car-card-header p {
    margin: 0;
    color: rgba(28,34,40,.6);
}
.car-price {
    text-align: right;
}
.car-price small {
    display: block;
    font-size: .75rem;
    color: rgba(28,34,40,.6);
}
.car-price span {
    font-size: 1.6rem;
    font-weight: 700;
    color: var(--secondary);
    line-height: 1;
}
.badge-spec {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 14px;
    border-radius: 999px;
    background: rgba(28,34,40,.08);
    color: var(--primary);
    font-weight: 600;
    margin-right: 10px;
    margin-bottom: 10px;
}
.badge-spec i {
    font-size: 1rem;
}
.badge-spec.badge-price {
    background: rgba(216,182,93,.15);
    color: var(--secondary);
}
.reservation-bg {
    background: white ;
    padding: 60px 0 110px;
}


</style>
