        <div>{{ excursion.description|raw }}</div>

        {# Inclus, Non inclus et Itin√©raire #}
        <div class="row mt-4">
            <div class="col-md-4">
                <h5 class="text-success">‚úÖ Inclus</h5>
                {% if excursion.inclusList|length > 0 %}
                    <ul class="list-group list-group-flush">
                        {% for item in excursion.inclusList %}
                            <li class="list-group-item">{{ item.item }}</li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p class="text-muted">Aucun √©l√©ment inclus</p>
                {% endif %}
            </div>

            <div class="col-md-4">
                <h5 class="text-danger">‚ùå Non inclus</h5>
                {% if excursion.nonInclusList|length > 0 %}
                    <ul class="list-group list-group-flush">
                        {% for item in excursion.nonInclusList %}
                            <li class="list-group-item">{{ item.item }}</li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p class="text-muted">Aucun √©l√©ment exclus</p>
                {% endif %}
            </div>

            <div class="col-md-4">
