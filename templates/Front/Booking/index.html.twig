{% extends 'baseFront.html.twig' %}

{% block title %}TuniTrip - Réservation{% endblock %}

{% block body %}
<div class="booking-container py-5">
    <!-- === ÉTAPES DE RÉSERVATION === -->
    <div class="steps text-center mb-5">
        <div class="step d-inline-block mx-3" id="step1Header">
            <div class="step-circle active">1</div>
            <p>Détails du trajet</p>
        </div>
        <div class="step d-inline-block mx-3" id="step2Header">
            <div class="step-circle">2</div>
            <p>Choisir un véhicule</p>
        </div>
        <div class="step d-inline-block mx-3" id="step3Header">
            <div class="step-circle">3</div>
            <p>Vos coordonnées</p>
        </div>
    </div>

    <!-- === ÉTAPE 1 === -->
    <div class="booking-step step-1 container">
            
                <h4 class="mb-3">Détails du trajet</h4>
                <form id="rideForm">
                    <div class="form-group mb-3">
                        <label>Type de transfert</label><br>
                        <input type="radio" name="transferType" id="oneWay" value="oneway" checked> Aller simple
                        <input type="radio" name="transferType" id="roundTrip" class="ms-3" value="roundtrip"> Aller-retour
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label>Date de prise en charge</label>
                            <input type="date" class="form-control" id="pickupDate">
                        </div>
                        <div class="col-md-6">
                            <label>Heure de prise en charge</label>
                            <input type="time" class="form-control" id="pickupTime">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label>Lieu de départ</label>
                        <input type="text" class="form-control" id="pickupLocation" placeholder="Entrez un lieu">
                    </div>

                    <div class="mb-3">
                        <label>Lieu d'arrivée</label>
                        <input type="text" class="form-control" id="dropLocation" placeholder="Entrez un lieu">
                    </div>

                    <div id="returnFields" style="display:none;">
                        <hr>
                        <h5>Détails du retour</h5>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label>Date de retour</label>
                                <input type="date" class="form-control" id="returnDate">
                            </div>
                            <div class="col-md-6">
                                <label>Heure de retour</label>
                                <input type="time" class="form-control" id="returnTime">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label>Lieu de prise en charge retour</label>
                            <input type="text" class="form-control" id="returnPickup" placeholder="Entrez le lieu de prise en charge retour">
                        </div>

                        <div class="mb-3">
                            <label>Lieu d'arrivée retour</label>
                            <input type="text" class="form-control" id="returnDrop" placeholder="Entrez le lieu d'arrivée retour">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label>Nombre de passagers</label>
                        <select class="form-control" id="passengers">
                            {% for i in 1..8 %}
                                <option value="{{ i }}">{{ i }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <button type="button" class="btn btn-warning w-100 mt-3" id="nextToStep2">
                        Choisir un véhicule →
                    </button>
                </form>
    </div>

    <!-- === ÉTAPE 2 === -->
    <div class="booking-step step-2 container" style="display:none;">
        <div class="row">
            <div class="col-md-4">
                <h5>Résumé du trajet</h5>
                <ul id="tripSummary"></ul>
                <button type="button" class="btn btn-secondary w-100" id="backToStep1">← Retour</button>
            </div>
            <div class="col-md-8">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4>Véhicules disponibles</h4>
                    <div>
                        <label>Filtrer:</label>
                        <select id="filterPassengers">
                            <option value="">Tous les passagers</option>
                            {% for i in 1..8 %}
                                <option value="{{ i }}">{{ i }} passagers</option>
                            {% endfor %}
                        </select>
                        <select id="filterSuitcases">
                            <option value="">Toutes les valises</option>
                            <option value="1">1 valise</option>
                            <option value="2">2 valises</option>
                            <option value="3">3+</option>
                        </select>
                    </div>
                </div>
                <div class="row" id="vehicleList">
                    <!-- Exemple statique (plus tard dynamique depuis la DB) -->
                    <div class="col-md-6 mb-3">
                        <div class="card p-3">
                            <h5>Voiture économique</h5>
                            <p>Passagers: 4 | Valises: 2</p>
                            <p><strong>Prix:</strong> 80 TND</p>
                            <button class="btn btn-warning selectVehicle">Sélectionner</button>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="card p-3">
                            <h5>Van</h5>
                            <p>Passagers: 8 | Valises: 6</p>
                            <p><strong>Prix:</strong> 150 TND</p>
                            <button class="btn btn-warning selectVehicle">Sélectionner</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- === ÉTAPE 3 === -->
    <div class="booking-step step-3 container" style="display:none;">
        <h4>Vos coordonnées</h4>
        <form id="contactForm">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label>Prénom *</label>
                    <input type="text" class="form-control" required>
                </div>
                <div class="col-md-6">
                    <label>Nom *</label>
                    <input type="text" class="form-control" required>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label>Email *</label>
                    <input type="email" class="form-control" required>
                </div>
                <div class="col-md-6">
                    <label>Téléphone *</label>
                    <input type="tel" class="form-control" required>
                </div>
            </div>

            <div class="mb-3">
                <label>Commentaires</label>
                <textarea class="form-control" rows="3"></textarea>
            </div>

            <div class="form-check mb-3">
                <input type="checkbox" id="billingAddressCheck" class="form-check-input">
                <label for="billingAddressCheck" class="form-check-label">Adresse de facturation</label>
            </div>

            <div id="billingFields" style="display:none;">
                <div class="mb-3"><label>Raison sociale</label><input type="text" class="form-control"></div>
                <div class="mb-3"><label>Numéro de TVA</label><input type="text" class="form-control"></div>
                <div class="mb-3"><label>Rue *</label><input type="text" class="form-control"></div>
                <div class="mb-3"><label>Numéro de rue</label><input type="text" class="form-control"></div>
                <div class="row">
                    <div class="col-md-4"><label>Ville *</label><input type="text" class="form-control"></div>
                    <div class="col-md-4"><label>Région</label><input type="text" class="form-control"></div>
                    <div class="col-md-4"><label>Code postal *</label><input type="text" class="form-control"></div>
                </div>
            </div>

            <hr>
            <h5>Méthode de paiement</h5>
            <div class="mb-3">
                <select class="form-control">
                    <option value="cash">Paiement à la livraison</option>
                    <option value="card">Carte bancaire</option>
                    <option value="paypal">PayPal</option>
                </select>
            </div>

            <button type="button" class="btn btn-secondary" id="backToStep2">← Retour</button>
            <button type="submit" class="btn btn-success float-end">Confirmer la réservation ✅</button>
        </form>
    </div>
</div>

<!-- === STYLES === -->
<style>
    .step-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: #ccc;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: auto;
    }
    .step-circle.active {
        background-color: #e3b04b;
    }
</style>

<!-- === GOOGLE MAPS SCRIPT === -->
<script src="https://maps.googleapis.com/maps/api/js?key=TA_CLE_ICI&libraries=places"></script>


<script>
document.addEventListener("DOMContentLoaded", function () {
    const roundTrip = document.getElementById("roundTrip");
    const returnFields = document.getElementById("returnFields");
    const billingCheck = document.getElementById("billingAddressCheck");
    const billingFields = document.getElementById("billingFields");

    // === AFFICHAGE CHAMPS DYNAMIQUES ===
    roundTrip.addEventListener("change", () => returnFields.style.display = roundTrip.checked ? "block" : "none");
    billingCheck.addEventListener("change", () => billingFields.style.display = billingCheck.checked ? "block" : "none");

    // === MAP GOOGLE ===
    let map = new google.maps.Map(document.getElementById("map"), {
        center: { lat: 36.81897, lng: 10.16579 },
        zoom: 7,
    });
    let directionsService = new google.maps.DirectionsService();
    let directionsRenderer = new google.maps.DirectionsRenderer();
    directionsRenderer.setMap(map);

    function calculateRoute() {
        const origin = document.getElementById("pickupLocation").value;
        const destination = document.getElementById("dropLocation").value;

        if (!origin || !destination) return;

        directionsService.route({
            origin: origin,
            destination: destination,
            travelMode: google.maps.TravelMode.DRIVING,
        }, (result, status) => {
            if (status === google.maps.DirectionsStatus.OK) {
                directionsRenderer.setDirections(result);
                const route = result.routes[0].legs[0];
                document.getElementById("distance").innerText = route.distance.text;
                document.getElementById("duration").innerText = route.duration.text;
            }
        });
    }

    document.getElementById("dropLocation").addEventListener("change", calculateRoute);
    document.getElementById("pickupLocation").addEventListener("change", calculateRoute);

    // === NAVIGATION ENTRE ÉTAPES ===
    const step1 = document.querySelector(".step-1");
    const step2 = document.querySelector(".step-2");
    const step3 = document.querySelector(".step-3");

    document.getElementById("nextToStep2").addEventListener("click", () => {
        step1.style.display = "none";
        step2.style.display = "block";
        document.querySelector("#step1Header .step-circle").classList.remove("active");
        document.querySelector("#step2Header .step-circle").classList.add("active");
        fillSummary();
    });

    document.getElementById("backToStep1").addEventListener("click", () => {
        step1.style.display = "block";
        step2.style.display = "none";
        document.querySelector("#step2Header .step-circle").classList.remove("active");
        document.querySelector("#step1Header .step-circle").classList.add("active");
    });

    document.getElementById("backToStep2").addEventListener("click", () => {
        step2.style.display = "block";
        step3.style.display = "none";
        document.querySelector("#step3Header .step-circle").classList.remove("active");
        document.querySelector("#step2Header .step-circle").classList.add("active");
    });

    document.querySelectorAll(".selectVehicle").forEach(btn => {
        btn.addEventListener("click", () => {
            step2.style.display = "none";
            step3.style.display = "block";
            document.querySelector("#step2Header .step-circle").classList.remove("active");
            document.querySelector("#step3Header .step-circle").classList.add("active");
        });
    });

    // === RÉSUMÉ DU TRAJET ===
    function fillSummary() {
        let list = document.getElementById("tripSummary");
        list.innerHTML = `
            <li><strong>Type:</strong> ${document.querySelector('input[name="transferType"]:checked').value}</li>
            <li><strong>Date:</strong> ${pickupDate.value}</li>
            <li><strong>Heure:</strong> ${pickupTime.value}</li>
            <li><strong>Départ:</strong> ${pickupLocation.value}</li>
            <li><strong>Arrivée:</strong> ${dropLocation.value}</li>
            <li><strong>Passagers:</strong> ${passengers.value}</li>
        `;
    }
});
</script>
{% endblock %}
