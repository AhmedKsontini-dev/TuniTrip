{% extends 'baseBack.html.twig' %}

{% block title %}D√©tails de l‚Äôexcursion{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-4 p-4">
        <h1 class="text-center mb-4 text-primary fw-bold">{{ excursion.titre }}</h1>

        {# Image principale #}
        {% if excursion.imagePrincipale %}
            <div class="text-center mb-4">
                <img src="{{ asset('uploads/images/' ~ excursion.imagePrincipale) }}" 
                     alt="{{ excursion.titre }}" class="img-fluid rounded shadow-sm" style="max-width:600px;">
            </div>
        {% endif %}

        {# Informations principales #}
        <div class="row mb-4 text-center">
            <div class="col-md-3"><strong>Cat√©gorie:</strong> {{ excursion.categorie ?: '‚Äî' }}</div>
            <div class="col-md-3"><strong>Dur√©e:</strong> {{ excursion.duree ?: '‚Äî' }}</div>
            <div class="col-md-3"><strong>Localisation:</strong> {{ excursion.localisation ?: '‚Äî' }}</div>
            <div class="col-md-3 text-success"><strong>Prix:</strong> {{ excursion.prixParPersonne }} TND</div>
