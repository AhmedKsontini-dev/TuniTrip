{% extends 'baseBack.html.twig' %}

{% block title %}Avis d'Excursion Favoris{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0 text-gray-800">Gestion des Avis d'Excursion Favoris</h1>
        </div>

        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">Liste des Avis d'Excursion</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Utilisateur</th>
                                <th>Excursion</th>
                                <th>Commentaire</th>
                                <th>Note</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>Utilisateur</th>
                                <th>Excursion</th>
                                <th>Commentaire</th>
                                <th>Note</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </tfoot>
                        <tbody>
                        {% for avis in avis_excursions %}
                            <tr>
                                <td>{{ avis.id }}</td>
                                <td>{{ avis.user ? avis.user.getPrenom() ~ ' ' ~ avis.user.getNom() : 'Anonyme' }}</td>
                                <td>{{ avis.excursion ? avis.excursion.getTitre() : 'N/A' }}</td>
                                <td>{{ avis.commentaire|length > 50 ? avis.commentaire|slice(0, 50) ~ '...' : avis.commentaire }}</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        {% for i in 1..5 %}
                                            <i class="fas fa-star {{ i <= avis.note ? 'text-warning' : 'text-gray-300' }}"></i>
                                        {% endfor %}
                                        <span class="ml-2">({{ avis.note }}/5)</span>
                                    </div>
                                </td>
                                <td>{{ avis.createdAt ? avis.createdAt|date('d/m/Y H:i') : '' }}</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="#" 
                                           class="btn btn-info btn-sm" 
                                           data-toggle="modal" 
                                           data-target="#viewAvisExcursionModal{{ avis.id }}"
                                           title="Voir">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        
                                        <form method="post" action="{{ path('app_back_favoris_avis_excursion_delete', {'id': avis.id}) }}" 
                                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet avis ?');"
                                              class="d-inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ avis.id) }}">
                                            <button class="btn btn-danger btn-sm" title="Supprimer">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>

                                    <!-- Modal pour voir l'avis -->
                                    <div class="modal fade" id="viewAvisExcursionModal{{ avis.id }}" tabindex="-1" role="dialog" 
                                         aria-labelledby="viewAvisExcursionModalLabel{{ avis.id }}" aria-hidden="true">
                                        <div class="modal-dialog modal-lg" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="viewAvisExcursionModalLabel{{ avis.id }}">
                                                        Avis sur {{ avis.excursion ? avis.excursion.getTitre() : 'Excursion' }}
                                                    </h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <p><strong>Utilisateur :</strong> {{ avis.user ? avis.user.getPrenom() ~ ' ' ~ avis.user.getNom() : 'Anonyme' }}</p>
                                                            <p><strong>Excursion :</strong> {{ avis.excursion ? avis.excursion.getTitre() : 'N/A' }}</p>
                                                            <p><strong>Date :</strong> {{ avis.createdAt ? avis.createdAt|date('d/m/Y H:i') : 'N/A' }}</p>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <p><strong>Note :</strong>
                                                                {% for i in 1..5 %}
                                                                    <i class="fas fa-star {{ i <= avis.note ? 'text-warning' : 'text-gray-300' }}"></i>
                                                                {% endfor %}
                                                                ({{ avis.note }}/5)
                                                            </p>
                                                        </div>
                                                    </div>
                                                    <div class="mt-3">
                                                        <p><strong>Commentaire :</strong></p>
                                                        <div class="border rounded p-3">{{ avis.commentaire|nl2br }}</div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center">Aucun avis d'excursion trouvé</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assetsBack/vendor/datatables/dataTables.bootstrap4.min.css') }}" rel="stylesheet">
    <style>
        .table th, .table td {
            vertical-align: middle;
        }
        .action-buttons .btn {
            margin: 0 2px;
        }
        .star-rating {
            color: #ffc107;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assetsBack/vendor/datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('assetsBack/vendor/datatables/dataTables.bootstrap4.min.js') }}"></script>
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/French.json"
                },
                "order": [[0, "desc"]]
            });
        });
    </script>
{% endblock %}
