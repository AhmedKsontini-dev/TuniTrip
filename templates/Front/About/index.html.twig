{% extends 'baseFront.html.twig' %}

{% block title %}{{ 'about.title'|trans }} | TuniTrip{% endblock %}

{% block stylesheet %}
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="{{ asset('assetsFront/css/about.css') }}">
{% endblock %}

{% block meta %}
<meta name="description" content="{{ 'meta.about'|trans }}">
{% endblock %}

{% block body %}

<!-- HERO HEADER -->
<div class="hero-header">
    <div class="hero-background"></div>
    <div class="hero-overlay"></div>

    <div class="hero-content">
        <div class="hero-icon pulse-glow">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
        </div>

        <h1>
            {{ 'about.title'|trans }}
        </h1>

        <p class="subtitle">
            {{ 'about.subtitle'|trans }}
        </p>

        <a href="{{ path('app_accueil') }}" class="hero-btn">
            {{ 'about.explore'|trans }}
        </a>
    </div>
</div>

<!-- WHO WE ARE -->
<section class="section section-light">
    <div class="container">
        <div class="animate-on-scroll">
            <div class="section-title-wrapper">
                <div class="title-line"></div>
                <h2 class="section-title">
                    {{ 'about.who_title'|trans }}
                </h2>
            </div>

            <div class="two-columns">
                <div class="content-text">
                    <p>
                        {{ 'about.who_text_1'|trans }}
                    </p>
                    <p>
                        {{ 'about.who_text_2'|trans }}
                    </p>
                </div>

                <div class="image-wrapper">
                    <div class="image-background"></div>
                    <img src="{{ asset('assetsFront/images/tunisia-travel.jpg') }}"
                         alt="Tunisia travel"
                         class="image-front">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- SERVICES -->
<section class="section section-dark">
    <div class="container">
        <div class="animate-on-scroll">
            <h2 class="section-title section-title-center">
                {{ 'about.services_title'|trans }}
            </h2>

            <div class="services-grid">
                <div class="service-card hover-lift">
                    <span class="service-icon">â­</span>
                    <p class="service-text">{{ 'about.service_1'|trans }}</p>
                </div>

                <div class="service-card hover-lift">
                    <span class="service-icon">ğŸš</span>
                    <p class="service-text">{{ 'about.service_2'|trans }}</p>
                </div>

                <div class="service-card hover-lift">
                    <span class="service-icon">ğŸ“</span>
                    <p class="service-text">{{ 'about.service_3'|trans }}</p>
                </div>

                <div class="service-card hover-lift">
                    <span class="service-icon">ğŸ›«</span>
                    <p class="service-text">{{ 'about.service_4'|trans }}</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- WHY CHOOSE US -->
<section class="section section-light">
    <div class="container">
        <div class="animate-on-scroll">
            <h2 class="section-title section-title-center">
                {{ 'about.why_title'|trans }}
            </h2>

            <div class="features-grid">

                <div class="feature-card hover-lift">
                    <h3>{{ 'about.pro'|trans }}</h3>
                    <p>{{ 'about.pro_desc'|trans }}</p>
                </div>

                <div class="feature-card hover-lift">
                    <h3>{{ 'about.safety'|trans }}</h3>
                    <p>{{ 'about.safety_desc'|trans }}</p>
                </div>

                <div class="feature-card hover-lift">
                    <h3>{{ 'about.flex'|trans }}</h3>
                    <p>{{ 'about.flex_desc'|trans }}</p>
                </div>

                <div class="feature-card hover-lift">
                    <h3>{{ 'about.price'|trans }}</h3>
                    <p>{{ 'about.price_desc'|trans }}</p>
                </div>

            </div>
        </div>
    </div>
</section>

<!-- VISION -->
<section class="section section-gradient">
    <div class="container">
        <div class="animate-on-scroll vision-content">
            <h2 class="section-title section-title-center">
                {{ 'about.vision_title'|trans }}
            </h2>

            <p>
                {{ 'about.vision_text'|trans }}
            </p>
        </div>
    </div>
</section>

<!-- CTA -->
<section class="section section-gold">
    <div class="container">
        <div class="cta-content">
            <h2>{{ 'about.cta_title'|trans }}</h2>
            <a href="{{ path('app_front_excursions_list') }}" class="cta-btn">
                {{ 'about.cta_btn'|trans }}
            </a>
        </div>
    </div>
</section>

{% endblock %}

{% block script %}
<script src="{{ asset('assetsFront/js/about.js') }}"></script>
{% endblock %}
