<div class="excurssion-container">
    <h1 class="section-title">{{ 'home.excursions.title'|trans }}</h1>


    <div class="swiper toursSwiper">
        <div class="swiper-wrapper">
            {% for excursion in excursions %}
                <div class="swiper-slide">
