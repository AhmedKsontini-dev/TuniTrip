                        {% for step in excursion.itineraires %}
                            <li class="list-group-item">
                                <strong>{{ step.titreEtape }}</strong>
                                {% if step.descriptionEtape %}
                                    <div>{{ step.descriptionEtape|raw }}</div>
                                {% endif %}
                            </li>
                        {% endfor %}
                    </ol>
                {% else %}
                    <p class="text-muted">Aucune √©tape d√©finie</p>
                {% endif %}
            </div>
        </div>

        {# Statut et dates #}
        <div class="row text-center mt-4">
            <div class="col-md-4">
                Statut: 
                {% if excursion.actif %}
                    <span class="badge bg-success">Visible</span>
                {% else %}
                    <span class="badge bg-secondary">Masqu√©e</span>
                {% endif %}
            </div>
            <div class="col-md-4">Cr√©√©e le: {{ excursion.createdAt ? excursion.createdAt|date('d/m/Y H:i') : '‚Äî' }}</div>
