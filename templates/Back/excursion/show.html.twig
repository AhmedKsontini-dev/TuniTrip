            <hr>
            <h4 class="text-primary mt-4">Galerie d‚Äôimages</h4>
            <div class="d-flex flex-wrap justify-content-center gap-3 mt-3">
                {% for img in excursion.images %}
                    <img src="{{ asset('uploads/images/' ~ img.imageUrl) }}" 
                         alt="" class="img-thumbnail shadow-sm" style="width:180px;height:120px;object-fit:cover;">
                {% endfor %}
            </div>
        {% endif %}

        {# Boutons d'action #}
        <hr>
        <div class="text-center mt-4">
            <a href="{{ path('admin_excursion_index') }}" class="btn btn-secondary px-4">‚Ü©Ô∏è Retour √† la liste</a>
            <a href="{{ path('admin_excursion_edit', {id: excursion.id}) }}" class="btn btn-warning px-4">‚úèÔ∏è Modifier</a>
            <a href="{{ path('admin_image_excursion_new', {excursionId: excursion.id}) }}" class="btn btn-info px-4">üñºÔ∏è G√©rer les images</a>
