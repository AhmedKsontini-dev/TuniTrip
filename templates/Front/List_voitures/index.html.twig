<style>
:root {
    --primary: #1c2228;
    --secondary: #d8b65d;
    --offwhite: #f5f4f1;
}
.page-hero {
    position: relative;
    height: 420px;
    background-image: url("{{ asset('assetsFront/SLIDE_01.jpg') }}");
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center; /* centre verticalement le contenu */
    justify-content: center; /* centre horizontalement */
    text-align: center;
    color: white;
}

.page-hero::before {
    content: "";
    position: absolute;
    inset: 0;
    background: rgba(28, 34, 40, 0.8); /* superposition sombre */
}

.page-hero_content {
    position: relative;
    z-index: 2;
    margin-top: 60px; 
}

.page-hero_title {
