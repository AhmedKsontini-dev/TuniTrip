{% extends 'baseBack.html.twig' %}

{% block title %}‚ûï Ajouter une image d‚Äôexcursion{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center py-3">
            <h3 class="mb-0">üñºÔ∏è Ajouter des images pour : "{{ excursion.titre }}"</h3>
        </div>

        <div class="card-body p-4">
            {{ form_start(form, {'attr': {'enctype':'multipart/form-data'}}) }}
            <div class="mb-3">
                {{ form_label(form.imageUrl) }}
                {{ form_widget(form.imageUrl, {'attr': {'class': 'form-control'}}) }}
                <div class="form-text">Vous pouvez s√©lectionner plusieurs images √† la fois.</div>
                {{ form_errors(form.imageUrl) }}
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a href="{{ path('admin_excursion_index') }}" class="btn btn-outline-secondary px-4">‚Ü©Ô∏è Retour</a>
                <button type="submit" class="btn btn-success px-4">üíæ Enregistrer</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

    {% if excursion.images|length > 0 %}
        <div class="card shadow-sm border-0 mt-5">
            <div class="card-header bg-light text-center">
                <h4 class="mb-0 text-primary">üì∏ Galerie existante</h4>
            </div>

            <div class="card-body">
                <div class="d-flex flex-wrap justify-content-center gap-3">
                    {% for img in excursion.images %}
                        <div class="position-relative" style="display:inline-block;">
                            <img src="{{ asset('uploads/images/' ~ img.imageUrl) }}" 
                                 class="img-thumbnail shadow-sm" 
                                 style="width:180px; height:120px; object-fit:cover; cursor:pointer;"
                                 data-bs-toggle="modal" 
                                 data-bs-target="#lightboxModal" 
                                 data-img="{{ asset('uploads/images/' ~ img.imageUrl) }}">

                            <form method="post"
                                  action="{{ path('admin_image_excursion_delete', {id: img.id}) }}"
                                  onsubmit="return confirm('Supprimer cette image ?');"
                                  style="position:absolute; top:5px; right:5px;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ img.id) }}">
                                <button type="submit" class="btn btn-sm btn-danger">‚úñ</button>
                            </form>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}
</div>

{# Modal Lightbox #}
<div class="modal fade" id="lightboxModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content bg-transparent border-0">
            <div class="modal-body p-0">
                <img src="" id="lightboxImage" class="img-fluid rounded shadow-sm" alt="Aper√ßu">
            </div>
            <button type="button" class="btn-close position-absolute top-0 end-0 m-3" data-bs-dismiss="modal"></button>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
    const lightboxModal = document.getElementById('lightboxModal');
    const lightboxImage = document.getElementById('lightboxImage');

    lightboxModal.addEventListener('show.bs.modal', function (event) {
        const img = event.relatedTarget;
        const src = img.getAttribute('data-img');
        lightboxImage.setAttribute('src', src);
    });
</script>
{% endblock %}
