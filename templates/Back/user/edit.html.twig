    <div class="card shadow-sm rounded-4">
        <div class="card-header bg-primary text-white fw-bold">
            ğŸ‘¤ Informations de l'utilisateur
        </div>
        <div class="card-body">
            <form method="post" action="{{ path('admin_user_edit', {'id': user.id}) }}">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="nom" class="form-label fw-bold">Nom</label>
                        <input type="text" class="form-control" id="nom" name="nom" value="{{ user.nom }}" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="prenom" class="form-label fw-bold">PrÃ©nom</label>
                        <input type="text" class="form-control" id="prenom" name="prenom" value="{{ user.prenom }}" required>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="email" class="form-label fw-bold">Email</label>
                        <input type="email" class="form-control" id="email" name="email" value="{{ user.email }}" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="tel" class="form-label fw-bold">TÃ©lÃ©phone</label>
                        <input type="text" class="form-control" id="tel" name="tel" value="{{ user.tel }}">
                    </div>
                </div>

                <div class="mb-3">
                    <label for="adresse" class="form-label fw-bold">Adresse</label>
                    <textarea class="form-control" id="adresse" name="adresse" rows="2">{{ user.adresse }}</textarea>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">RÃ´le actuel</label>
