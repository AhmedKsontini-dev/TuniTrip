{% extends 'baseFront.html.twig' %}

{% block title %}Contact TuniTrip | Agence de location en Tunisie{% endblock %}

{% block metaDescription %}
<meta name="description" content="Contactez TuniTrip, agence de location en Tunisie, pour réserver vos excursions, transferts et voyages sur mesure.">
{% endblock %}

{% block body %}

<!-- === HEADER === -->
<div class="home">
    <div class="home_content">
        <h1 class="home_title">Contactez TuniTrip</h1>
        <p>Accueil // Contact </p>
    </div>
</div>

<!-- === INFO SIMPLE === -->
<section class="contact-info-section">
<!-- Flash messages (fallback non-AJAX) -->
    {% for message in app.flashes('success') %}
        <div class="alert alert-success fw-semibold popup-message">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger fw-semibold popup-message">{{ message }}</div>
    {% endfor %}
    <div class="info-line">
        <div class="info-block">
            <img src="{{ asset('assetsFront/icons/phone-call.png') }}" alt="Phone Icon" class="info-icon">
            <h4>Téléphone</h4>
            <p>+216 55 123 456</p>
        </div>
        <div class="info-block">
            <img src="{{ asset('assetsFront/icons/email.png') }}" alt="Email Icon" class="info-icon">
            <h4>Email</h4>
            <p>contact@tunitrip.com</p>
        </div>
        <div class="info-block">
            <img src="{{ asset('assetsFront/icons/clock (1).png') }}" alt="Clock Icon" class="info-icon">
            <h4>Horaires</h4>
            <p>Lun - Ven: 8:00 - 18:00</p>
        </div>
    </div>
</section>

<!-- === FORMULAIRE SIMPLE STYLE HTML === -->
<section class="contact_form_section">
    

    <h2>Envoyer un Message</h2>

    <form id="contactForm" action="{{ path('app_front_contact') }}" method="POST" class="contact_form">
        {{ form_widget(form._token) }}

        <!-- Nom et Email côte à côte -->
        <div class="form_row">
            <div class="form_group">
                <label for="name">Nom et Prénom</label>
                <input type="text" class="form_input" name="{{ form.nom.vars.full_name }}" id="name"
                       placeholder="Votre Nom et prénom*" value="{{ form.nom.vars.value|default('') }}" required>
                <div class="text-danger small">{{ form_errors(form.nom) }}</div>
            </div>
            <div class="form_group">
                <label for="email">Email</label>
                <input type="email" class="form_input" name="{{ form.email.vars.full_name }}" id="email"
                       placeholder="Votre Email*" value="{{ form.email.vars.value|default('') }}" required>
                <div class="text-danger small">{{ form_errors(form.email) }}</div>
            </div>
        </div>

        <!-- Sujet -->
        <div class="form_group">
            <label for="subject">Sujet</label>
            <input type="text" class="form_input" name="{{ form.sujet.vars.full_name }}" id="subject"
                   placeholder="Sujet*" value="{{ form.sujet.vars.value|default('') }}" required>
            <div class="text-danger small">{{ form_errors(form.sujet) }}</div>
        </div>

        <!-- Message -->
        <div class="form_group">
            <label for="message">Message</label>
            <textarea name="{{ form.message.vars.full_name }}" class="form_input form_textarea" id="message" rows="6"
                      placeholder="Tapez votre message" required>{{ form.message.vars.value|default('') }}</textarea>
            <div class="text-danger small">{{ form_errors(form.message) }}</div>
        </div>

        <div class="contact-envoyer-container">
            <div class="button">
                <div class="button_bcg"></div>
                <a href="javascript:void(0)" onclick="document.getElementById('contactForm').submit()">Envoyer le message</a>
            </div>
        </div>
    </form>
</section>

{% endblock %}