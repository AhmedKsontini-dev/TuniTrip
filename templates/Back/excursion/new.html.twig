{% extends 'baseBack.html.twig' %}

{% block title %}‚ûï Nouvelle excursion{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="card shadow border-0 rounded-4 p-4">
        <h2 class="text-center text-primary fw-bold mb-5">‚ûï Ajouter une nouvelle excursion</h2>

        {{ form_start(form, {'attr': {'enctype':'multipart/form-data'}}) }}

        <div class="row g-4">
            <!-- Infos principales -->
            <div class="col-lg-6">
                <div class="card shadow-sm p-4 mb-4 border-primary rounded-4">
                    <h5 class="text-primary mb-4 fw-bold">Informations principales</h5>
                    {% for field in ['titre','categorie','duree','prixParPersonne','localisation','cancellation','ages','max_pers','guide'] %}
                        <div class="mb-3">
                            {{ form_label(attribute(form, field), null, {'label_attr': {'class': 'fw-bold'}}) }}
                            {{ form_widget(attribute(form, field), {'attr': {'class':'form-control form-control-lg'}}) }}
                            {{ form_errors(attribute(form, field)) }}
                        </div>
                    {% endfor %}
                </div>
            </div>

            <!-- Description et actif -->
            <div class="col-lg-6">
                <div class="card shadow-sm p-4 mb-4 border-info rounded-4">
                    <h5 class="text-info mb-4 fw-bold">Description</h5>
                    {% for field in ['description','aPropos'] %}
                        <div class="mb-3">
                            {{ form_label(attribute(form, field), null, {'label_attr': {'class': 'fw-bold'}}) }}
                            {{ form_widget(attribute(form, field), {'attr': {'class':'form-control form-control-lg', 'rows':4}}) }}
                            {{ form_errors(attribute(form, field)) }}
                        </div>
                    {% endfor %}

                    <div class="form-check mt-3">
                        {{ form_widget(form.actif, {'attr': {'class':'form-check-input'}}) }}
                        {{ form_label(form.actif, null, {'label_attr': {'class':'form-check-label fw-bold'}}) }}
                    </div>
                </div>
            </div>
        </div>

        <!-- Image principale -->
        <div class="card shadow-sm p-4 mb-4 border-secondary rounded-4">
            <h5 class="text-secondary mb-3 fw-bold">üì∏ Image principale</h5>
            {{ form_widget(form.imagePrincipale, {'attr': {'class':'form-control form-control-lg'}}) }}
            {{ form_errors(form.imagePrincipale) }}
        </div>

        <!-- Boutons -->
        <div class="text-center mt-4">
            <button class="btn btn-primary btn-lg px-5 me-3">üíæ Enregistrer l‚Äôexcursion</button>
            <a href="{{ path('admin_excursion_index') }}" class="btn btn-outline-secondary btn-lg px-5">‚Ü©Ô∏è Retour</a>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
