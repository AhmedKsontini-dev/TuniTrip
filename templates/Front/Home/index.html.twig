<div id="commentModal" class="review-modal-overlay" style="display: none;">
    <div class="review-modal-card">
        <button class="close-btn" onclick="document.getElementById('commentModal').style.display='none'" aria-label="{{ 'home.comment.close'|trans }}"></button>
        <h3 id="modalName">Nom Prénom</h3>
        <div class="test_rating" id="modalRating">★★★★★</div>
        <p id="modalCommentaire">Commentaire complet ici...</p>
        <div id="modalDate" class="helper-text">Date</div>
    </div>
</div>


<!-- Contact -->
<div class="contact-section">
    <div class="container">
        <div class="row align-items-center">
            
            <!-- Colonne Gauche -->
            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="contact-left">
                     <h2>{{ 'home.contact.title'|trans }}</h2>
                     <p>{{ 'home.contact.subtitle'|trans }}</p>
                </div>
            </div>

            <!-- Colonne Droite (Form) -->
            <div class="col-lg-6">
                
                <div class="contact-box">
                    {{ form_start(form, {'action': path('app_front_contact'), 'attr': {'id': 'contactForm'}}) }}

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_widget(form.nom, {
                                    'attr': {
                                        'class': 'form-control-modern',
                                        'placeholder': 'contact.form.name_placeholder'|trans
                                    }
                                }) }}
                            </div>

                            <div class="col-md-6 mb-3">
                                {{ form_widget(form.email, {
                                    'attr': {
                                        'class': 'form-control-modern',
                                        'placeholder': 'contact.form.email_placeholder'|trans
                                    }
                                }) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_widget(form.sujet, {
                                'attr': {
                                    'class': 'form-control-modern',
                                    'placeholder': 'contact.form.subject_placeholder'|trans
                                }
                            }) }}
                        </div>

                        <div class="mb-4">
                            {{ form_widget(form.message, {
                                'attr': {
                                    'class': 'form-control-modern',
                                    'rows': 4,
                                    'placeholder': 'contact.form.message_placeholder'|trans
                                }
                            }) }}
                        </div>

                        <button type="submit" class="btn-gradient">
                            {{ 'contact.form.submit_button'|trans }}
                        </button>

                        {{ form_end(form) }}

                </div>

                 <!-- Zone de notification -->
                <div class="contact-right position-relative">
                   <!-- messages ajax ici -->
                </div>

            </div>
        </div>
    </div>
</div>

