{% extends 'baseFront.html.twig' %}

{% block title %}{{ 'excursions.list.page_title'|trans }}{% endblock %}

{% block metaDescription %}
Explorez toutes nos excursions en Tunisie avec TuniTrip : désert, mer, culture et aventure. Comparez les prix, consultez les avis et réservez votre excursion facilement.
{% endblock %}

{% block stylesheet %}
<link rel="stylesheet" href="{{ asset('assetsFront/styles/offers_styles.css') }}">
<link rel="stylesheet" href="{{ asset('assetsFront/styles/offers_responsive.css') }}">
<link rel="stylesheet" href="{{ asset('assetsFront/css/excursions_list.css') }}">
{% endblock %}

{% block body %}
<!-- Header -->
<div class="home">
    <div class="home_content">
        <h1 class="home_title">{{ 'excursions.list.hero.title'|trans }}</h1>
        <p>{{ 'excursions.list.hero.breadcrumb'|trans }}</p>
    </div>
</div>



<!-- Main -->
<div class="container my-5">

    <div class="row">
        <!-- Filtres -->
        <div class="col-lg-3 col-md-4 mb-4">
            <div class="filter-section">

                <h4 class="filter-title">
                    <i class="fa fa-filter me-2"></i>{{ 'excursions.list.filters.title'|trans }}
                </h4>

                <form method="get" action="{{ path('app_front_excursions_list') }}">

                    <!-- Catégorie -->
                    <div class="filter-group">
                        <label for="categorie">{{ 'excursions.list.filters.category'|trans }}</label>
                        <select name="categorie" id="categorie" class="theme-input">
                            <option value="">{{ 'common.all'|trans }}</option>
                            {% for cat in categories %}
                                <option value="{{ cat }}" {% if app.request.query.get('categorie') == cat %}selected{% endif %}>{{ cat }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <!-- Localisation -->
                    <div class="filter-group">
                        <label for="localisation">{{ 'excursions.list.filters.location'|trans }}</label>
                        <select name="localisation" id="localisation" class="theme-input">
                            <option value="">{{ 'common.all'|trans }}</option>
                            {% for loc in localisations %}
                                <option value="{{ loc }}" {% if app.request.query.get('localisation') == loc %}selected{% endif %}>{{ loc }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <!-- Prix -->
                    <div class="filter-group">
                        <label for="prix">{{ 'excursions.list.filters.max_price'|trans }}: <span id="prixValue">{{ app.request.query.get('prix', 200) }}</span> TND</label>
                        <input type="range" min="10" max="1000" value="{{ app.request.query.get('prix', 200) }}"
                            id="prix" name="prix"
                            class="theme-slider"
                            oninput="document.getElementById('prixValue').textContent=this.value">
                    </div>

                    <!-- DurÃ©e -->
                    <div class="filter-group">
                        <label for="duree">{{ 'excursions.list.filters.duration'|trans }}</label>
                        <select name="duree" id="duree" class="theme-input">
                            <option value="">{{ 'common.all'|trans }}</option>
                            <option value="1" {% if app.request.query.get('duree') == '1' %}selected{% endif %}>{{ 'excursions.list.filters.days_count'|trans({'%count%': 1}) }}</option>
                            <option value="2" {% if app.request.query.get('duree') == '2' %}selected{% endif %}>{{ 'excursions.list.filters.days_count'|trans({'%count%': 2}) }}</option>
                            <option value="3" {% if app.request.query.get('duree') == '3' %}selected{% endif %}>{{ 'excursions.list.filters.days_count'|trans({'%count%': 3}) }}</option>
                            <option value="4+" {% if app.request.query.get('duree') == '4+' %}selected{% endif %}>{{ 'excursions.list.filters.days_count_plus'|trans({'%count%': 4}) }}</option>
                        </select>
                    </div>

                    <!-- Langue du guide -->
                    <div class="filter-group">
                        <label for="langue">{{ 'excursions.list.filters.guide_language'|trans }}</label>
                        <select name="langue" id="langue" class="theme-input">
                            <option value="">{{ 'common.all'|trans }}</option>
                            <option value="FranÃ§ais" {% if app.request.query.get('langue') == 'FranÃ§ais' %}selected{% endif %}>{{ 'languages.french'|trans }}</option>
                            <option value="Anglais" {% if app.request.query.get('langue') == 'Anglais' %}selected{% endif %}>{{ 'languages.english'|trans }}</option>
                            <option value="Allemand" {% if app.request.query.get('langue') == 'Allemand' %}selected{% endif %}>{{ 'languages.german'|trans }}</option>
                            <option value="Italien" {% if app.request.query.get('langue') == 'Italien' %}selected{% endif %}>{{ 'languages.italian'|trans }}</option>
                            <option value="Espagnol" {% if app.request.query.get('langue') == 'Espagnol' %}selected{% endif %}>{{ 'languages.spanish'|trans }}</option>
                        </select>
                    </div>

                    <!-- Nombre de personnes max -->
                    <div class="filter-group">
                        <label for="nbr_personnes">{{ 'excursions.list.filters.max_people'|trans }}</label>
                        <input type="number" name="nbr_personnes" id="nbr_personnes"
                            class="theme-input" placeholder="{{ 'excursions.list.filters.max_people_placeholder'|trans }}">
                    </div>

                    <button type="submit" class="btn-animated-primary excursion-details-btn">
                        {{ 'excursions.list.filters.apply'|trans }}
                    </button>

                </form>
            </div>
        </div>



        <!-- Liste Excursions -->
        <div class="col-lg-9 col-md-8">
            {% if excursions|length > 0 %}
                {% for excursion in excursions %}
                    <div class="excursion-card">
                        <div class="excursion-image" style="background-image: url('{{ excursion.imagePrincipalePath }}');">
                            <span class="excursion-badge">{{ excursion.categorie }}</span>
                            <img src="{{ excursion.imagePrincipalePath }}"
                            alt="Excursion {{ excursion.titre }} en Tunisie"
                            class="d-none">


                            {# Bouton favoris #}
                            <button class="favorite-btn require-login" 
                                    data-excursion-id="{{ excursion.id }}" 
                                    data-action="add-favoris">
                                <i class="far fa-heart {% if excursion.id in userFavorisIds %}fas text-warning{% endif %}"></i>
                            </button>


                        </div>

                        <div class="excursion-content">
                            <div class="excursion-header">
                                <h3 class="excursion-title">{{ excursion.titre }}</h3>
                                <div class="excursion-price">
                                    {{ excursion.prixParPersonne }} TND <span class="text-muted fs-6">{{ 'excursions.per_person'|trans }}</span>
                                </div>
                            </div>

                            <p class="excursion-description">{% if app.request.locale == 'fr' %}{{ excursion.description|slice(0,180) }}{% else %}{{ (excursion.descriptionEn ?? excursion.description)|slice(0,180) }}{% endif %}...</p>

                            <div class="excursion-meta">
                                <span><i class="fa fa-map-marker"></i>{{ excursion.localisation }}</span>
                                <span><i class="fa fa-clock-o"></i>{% if excursion.duree == 1 %}{{ 'excursions.duration.day'|trans({'%count%': excursion.duree}) }}{% else %}{{ 'excursions.duration.days'|trans({'%count%': excursion.duree}) }}{% endif %}</span>
                                <span><i class="fa fa-tag"></i>{{ excursion.categorie }}</span>
                            </div>

                            <a href="{{ path('app_front_excursion_details', {'slug': excursion.slug}) }}" class="btn-animated-primary excursion-details-btn">
                                <i class="fa fa-info-circle me-1"></i> {{ 'common.view_details'|trans }}
                            </a>

                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="alert alert-warning mt-4 text-center">
                    <i class="fa fa-exclamation-circle me-2"></i>{{ 'excursions.list.no_results'|trans }}
                </div>
            {% endif %}


        </div>

    </div>

    {% if totalPages > 1 %}
        <nav aria-label="Page navigation" class="mt-3">
            <ul class="pagination justify-content-center">
                <li class="page-item {% if currentPage == 1 %}disabled{% endif %}">
                    <a class="page-link" href="{{ path('app_front_excursions_list', app.request.query.all|merge({'page': currentPage - 1})) }}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>

                {% for page in 1..totalPages %}
                    <li class="page-item {% if page == currentPage %}active{% endif %}">
                        <a class="page-link" href="{{ path('app_front_excursions_list', app.request.query.all|merge({'page': page})) }}">{{ page }}</a>
                    </li>
                {% endfor %}

                <li class="page-item {% if currentPage == totalPages %}disabled{% endif %}">
                    <a class="page-link" href="{{ path('app_front_excursions_list', app.request.query.all|merge({'page': currentPage + 1})) }}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    {% endif %}
</div>
</div>
{% endblock %}

{% block script %}
<script src="{{ asset('assetsFront/plugins/parallax-js-master/parallax.min.js') }}"></script>
<script>
    document.addEventListener('DOMContentLoaded', () => {
         document.body.dataset.userLoggedIn = "{{ app.user ? 'true' : 'false' }}";
    });
</script>

<script src="{{ asset('assetsFront/js/excursions_list.js') }}"></script>
{% endblock %}
