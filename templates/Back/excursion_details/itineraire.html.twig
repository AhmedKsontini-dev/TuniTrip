{% extends 'baseBack.html.twig' %}

{% block title %}Nouvel Itinéraire{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4 fw-bold">Ajouter une étape d'itinéraire</h1>

    {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

    <div class="row g-3">
        <div class="col-md-6">
            {{ form_row(form.titreEtape, {'attr': {'class': 'form-control form-control-lg shadow-sm rounded-3'}}) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.ordre, {'attr': {'class': 'form-control form-control-lg shadow-sm rounded-3'}}) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.latitude, {'attr': {'class': 'form-control form-control-lg shadow-sm rounded-3'}}) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.longitude, {'attr': {'class': 'form-control form-control-lg shadow-sm rounded-3'}}) }}
        </div>
        <div class="col-12">
            {{ form_row(form.descriptionEtape, {'attr': {'class': 'form-control shadow-sm rounded-3', 'rows': 4}}) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.dureeVisite, {'attr': {'class': 'form-control shadow-sm rounded-3'}}) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.admission, {'attr': {'class': 'form-control shadow-sm rounded-3'}}) }}
        </div>
    </div>

    <h3 class="mt-5 mb-3">Photos</h3>
    <div class="photos-collection row g-3" data-prototype="{{ form_widget(form.photos.vars.prototype)|e('html_attr') }}">
        {% for photoForm in form.photos %}
            <div class="col-md-4 photo-item">
                <div class="card shadow-sm rounded-3 p-3 position-relative">
                    {{ form_row(photoForm.imageUrl, {'attr': {'class': 'form-control'}}) }}
                    {{ form_row(photoForm.legende, {'attr': {'class': 'form-control mt-2'}}) }}
                    {{ form_row(photoForm.ordre, {'attr': {'class': 'form-control mt-2'}}) }}
                    <button type="button" class="btn btn-danger btn-sm position-absolute top-0 end-0 m-2 remove-photo">
                        ❌
                    </button>
                </div>
            </div>
        {% endfor %}
    </div>

    <button type="button" class="btn btn-primary mt-3 mb-4" id="add-photo">
        ➕ Ajouter une photo
    </button>

    <div class="mt-4">
        <button class="btn btn-success btn-lg px-4">Enregistrer</button>
    </div>

    {{ form_end(form) }}
</div>

<style>
    h1, h3 {
        color: #2c3e50;
    }

    .photos-collection .photo-item .card {
        transition: transform 0.2s;
    }

    .photos-collection .photo-item .card:hover {
        transform: scale(1.03);
    }

    .remove-photo {
        border-radius: 50%;
        padding: 0.25rem 0.5rem;
        font-size: 0.9rem;
    }

    @media (max-width: 767px) {
        .photos-collection .photo-item {
            flex: 0 0 100%;
        }
    }
</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
    let collectionHolder = document.querySelector('.photos-collection');
    let addButton = document.getElementById('add-photo');

    let index = collectionHolder.querySelectorAll('.photo-item').length;

    addButton.addEventListener('click', () => {
        let prototype = collectionHolder.dataset.prototype;
        let newForm = prototype.replace(/__name__/g, index);
        let div = document.createElement('div');
        div.classList.add('col-md-4', 'photo-item');
        div.innerHTML = `<div class="card shadow-sm rounded-3 p-3 position-relative">${newForm}<button type="button" class="btn btn-danger btn-sm position-absolute top-0 end-0 m-2 remove-photo">❌</button></div>`;
        collectionHolder.appendChild(div);

        div.querySelector('.remove-photo').addEventListener('click', () => {
            div.remove();
        });

        index++;
    });

    collectionHolder.querySelectorAll('.remove-photo').forEach(btn => {
        btn.addEventListener('click', e => {
            e.target.closest('.photo-item').remove();
        });
    });
});
</script>
{% endblock %}
